<FlatButton@ButtonBehavior+Label>:
    font_size: 14
<MainoperatorWindow>:
    id: main_operator
    orientation: "vertical"
    canvas.before:
        Color:
            rgba: (1,1,1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (.06, .45, .45, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "SilverStonePOS"
            bold: True
            size_hint_x: .9
        FlatButton:
            text: "jode"
            size_hint_x: .1    
    BoxLayout:
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (.06, .45, .45, 0.9)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'Current Item:'
            background_normal: ''
            background_color: (.06, .32, .32, 1)
            size_hint_x: .4
        Button:
            id: cur_product
            text: 'Default Product'
            background_normal: ''
            background_color: (.06, .4, .4, 1)
        Button: 
            id: cur_price
            text: '0.00'
            background_normal: ''
            background_color: (.06, .65, .65, 1)
            size_hint_x: .2
    BoxLayout:
        size_hint_y: 0.99
        padding:10,10  
        BoxLayout:
            size_hint_y: None
            height: 50
            canvas.before:
                Color:
                    rgba: (.06, .45, .45, 0.9)
                Rectangle:
                    size: self.size
                    pos: self.pos                  
    BoxLayout:
        size_hint_y: None
        height: 50
            